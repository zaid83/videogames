{% extends 'base.html.twig' %}
{% block body %}
	<div class="container-fluid">
		{{form_start(formValid)}}
		<div class="register-form">
			<div class="row">
				<h2 style="color:coral;">Valider un article</h2>
				<div class="col-md-4 col-sm-4 col-lg-4">
					<label for="title">TITRE</label>
					{{form_widget(formValid.title, {
                'attr' : {"class" : "form-control"},
				'label' : false
				})
			    }}
				</div>
			</div>

			<div class="row">
				<div class="col-md-4 col-sm-4 col-lg-4">
					<label for="img_article">IMAGE</label>
					<img src="{{asset('uploads/article_image/' ~ article.img)}}" width="200" alt="image de l'article">
				</div>
			</div>


			<div class="row">
				<div class="col-md-8 col-sm-8 col-lg-8">

					<label for="content">CONTENU</label>
					{{form_widget(formValid.content,{
                'attr' : {"class" : "form-control"},
				'label' : false
					 })
					 }}
				</div>
			</div>

			<div class="row">
				<div class="col-md-8 col-sm-8 col-lg-8">

					<label for="content">COMMENTAIRES</label>
					{{form_widget(formValid.signals,{
                'attr' : {"class" : "form-control"},
				'label' : false
					 })
					 }}
				</div>
			</div>
			<hr>
			<div class="col-md-6 col-sm-6 col-xs-6 col-lg-6">
				<button class="btn btn-default logbutton" type="submit" name="submit">
					Publier article
				</button>
			</div>
		</div>
		{{form_end(formValid)}}
	</div>
{% endblock %}
